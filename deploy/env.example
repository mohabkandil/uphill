# Copy this file to .env and fill in values

# AWS configuration
AWS_REGION=eu-west-1
AWS_ACCOUNT_ID=

# ECS
ECS_CLUSTER_NAME=uphill-cluster
ECS_TASK_FAMILY_PREFIX=uphill
DESIRED_COUNT=1

# Optional IAM roles (recommended)
ECS_EXECUTION_ROLE_ARN=
ECS_TASK_ROLE_ARN=

# Networking
VPC_ID=vpc-xxxxxxxx
# Comma-separated subnet IDs (prefer private subnets for Fargate with NAT)
PRIVATE_SUBNET_IDS=subnet-aaaa,subnet-bbbb
PUBLIC_SUBNET_IDS=subnet-cccc,subnet-dddd
SECURITY_GROUP_ID=sg-xxxxxxxx

# Image tagging
IMAGE_TAG=


